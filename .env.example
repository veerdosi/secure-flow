# ====================================
# REQUIRED - Application won't work without these
# ====================================

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/secure-flow

# JWT Authentication (change this!)
JWT_SECRET=your-super-secret-jwt-key-make-this-long-and-random

# Basic API settings
PORT=3001
NODE_ENV=development

# ====================================
# OPTIONAL - For full functionality
# ====================================

# Google Cloud (only needed for AI analysis)
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security settings (optional - has defaults)
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URLs (optional - has defaults)
API_BASE_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# Logging (optional)
LOG_LEVEL=info
ENABLE_TELEMETRY=true
