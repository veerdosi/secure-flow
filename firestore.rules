rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Projects - require authentication
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.token.role == 'ADMIN' ||
         request.auth.token.role == 'DEVELOPER' ||
         request.auth.token.role == 'SECURITY_ANALYST');
    }

    // Analyses - require authentication to read, system can write
    match /analyses/{analysisId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null ||
        request.auth.token.role == 'SYSTEM';
    }

    // Webhooks - allow system access
    match /webhooks/{webhookId} {
      allow read, write: if true; // Webhooks need to be accessible from cloud functions
    }

    // Activity logs
    match /activity/{activityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
